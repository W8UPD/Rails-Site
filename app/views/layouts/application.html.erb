<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <title>The University of Akron Amateur Radio Club, W8UPD</title>

    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-22277117-1']);
      _gaq.push(['_trackPageview']);
      
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
   
  </head>
  <body>
    <div id="global">
      <div id="header" class="cf">
        <div class="constrain">
          <%= link_to 'W8UPD', '/', :class => 'clubcall fl' %>
          <span class="fr">
            <form id="search">
              <input class="search_text" type="text" value="Search W8UPD..." x-webkit-speech />
            </form>
          </span>
        </div>
      </div>
      <div id="linkbar">
        <div class="constrain">
          <ul id="linkbarlist">
 
            <li><a href="/repeater/">Repeater</a></li>
            <li><a href="/calendar/">Calendar</a></li>
		        <li><a href="/projects/">Projects</a></li>
		        <li><a href="/net/">Nets</a></li>
		        <li><a href="/links/">Links</a></li>
		        <li><a href="/irc/">IRC Chat</a>
		        <li><a href="/newsletters/">News Letters</a></li>
		        <li><a href="http://group.w8upd.org/">Email List</a></li>
            <li><a href="http://oldsite.w8upd.org/">Old Site</a></li>
          </ul>
          <% if current_user %>
            <ul id="linkbarlistright">
              <li><%= link_to 'Log out', '/auth/logout' %></li>
            </ul>
          <% else %>
            <ul id="linkbarlistright">
              <li><%= link_to 'Log in', '#', :id => 'loginlink' %></li>
            </ul>
          <% end %>
        </div>
      </div>
      
      <div id="loginbar" class="cf">
        <div class="constrain">
          <%= link_to image_tag('authbuttons/png/facebook_32.png'), '/auth/facebook' %>
        </div>
      </div>
      
      <div id="content" class="cf">
        <%= yield %>
      </div>
      <div id="footer">
        <span class="fl">Powered by Ruby on Rails<br /></span>
        <span class="fr">&copy; 2011-present The University of Akron Amateur Radio Club</span>
      </div>
    </div>
    <script type="text/javascript">
      $(document).ready(function() {
        $('#loginbar').hide();
        $('#loginlink').click(function() {
          $('#loginbar').slideToggle('fast');
          return false;
        });
      });
    </script>
  </body>
</html>
